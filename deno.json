{
    "fmt": {
        "useTabs": false,
        "indentWidth": 4,
        "lineWidth": 100,
        "singleQuote": true,
        "semiColons": true,
        "trailingCommas": "never",
        "exclude": ["**/dist", "**/build", "**/node_modules"]
    },
    "lint": {
        "exclude": [
            "**/dist",
            "**/build",
            "**/node_modules",
            "**/*.test.ts",
            "**/*.spec.ts",
            "**/*.config.ts",
            "**/*.config.js"
        ],
        "rules": {
            "tags": ["recommended"],
            "include": ["eqeqeq"],
            "exclude": [
                "require-await",
                "no-process-global",
                "no-node-globals",
                "no-irregular-whitespace",
                "no-sloppy-imports"
            ]
        }
    }
}
